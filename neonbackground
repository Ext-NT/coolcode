import turtle
def neon_display(text):
    colors = ['red', 'blue', 'green', 'orange', 'purple']
    t = turtle.Turtle()
    t.width(3)
    t.speed(3)
    
    for i in range(5):
        t.color(colors[i % len(colors)])
        for char in text:
            t.write(char, move=True, font=("Arial", 30, "normal"))
            t.pendown()
            t.penup()
            t.forward(30)
        t.goto(0, t.ycor() - 50)
    
    turtle.done()

